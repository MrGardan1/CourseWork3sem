<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CtfApp.ViewModels"
        xmlns:v="using:CtfApp.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="CtfApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CTF Platform"
        Width="900" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e2e">

    <Panel>
        <!-- ЭКРАН ВХОДА -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Login}">
            <Grid Background="#1e1e2e">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25" Width="450">
                    
                    <!-- Заголовок -->
                    <TextBlock Text="Welcome" Foreground="#a6e3a1" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                    
                    <!-- Форма входа -->
                    <Border Background="#313244" CornerRadius="10" Padding="35,30" BorderBrush="#45475a" BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Login" Foreground="#cdd6f4" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <TextBox Watermark="Username" Text="{Binding Username}" 
                                     Height="48" CornerRadius="8" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <TextBox Watermark="Password" Text="{Binding Password}" 
                                     Height="48" CornerRadius="8" PasswordChar="●" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <Button Command="{Binding LoginCommand}" Content="SIGN IN" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="48" 
                                    Background="#a6e3a1" Foreground="#1e1e2e" FontWeight="Bold" CornerRadius="8" FontSize="14" Margin="0,10,0,0"/>
                            
                            <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" 
                                       HorizontalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap" TextAlignment="Center" MinHeight="20"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Регистрация -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                        <TextBlock Text="Don't have an account?" Foreground="#a6adc8" FontSize="13"/>
                        <Button Content="Sign Up" Background="Transparent" Foreground="#89b4fa" 
                                Command="{Binding SwitchToRegisterCommand}" 
                                FontWeight="SemiBold" FontSize="13" Padding="0" Height="20"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Panel>

                <!-- ЭКРАН РЕГИСТРАЦИИ -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Register}">
            <Grid Background="#1e1e2e">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25" Width="450" DataContext="{Binding RegisterViewModel}">
                                        
                    <!-- Форма регистрации -->
                    <Border Background="#313244" CornerRadius="10" Padding="35,30" BorderBrush="#45475a" BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Sign Up" Foreground="#cdd6f4" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <TextBox Watermark="Username" Text="{Binding Username}" 
                                     Height="48" CornerRadius="8" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <TextBox Watermark="Password" Text="{Binding Password}" 
                                     Height="48" CornerRadius="8" PasswordChar="●" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <TextBox Watermark="Confirm Password" Text="{Binding PasswordConfirm}" 
                                     Height="48" CornerRadius="8" PasswordChar="●" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <Button Command="{Binding RegisterCommand}" Content="CREATE ACCOUNT" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="48" 
                                    Background="#fab387" Foreground="#1e1e2e" FontWeight="Bold" CornerRadius="8" FontSize="14" Margin="0,10,0,0"/>
                            
                            <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" 
                                       HorizontalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap" TextAlignment="Center" MinHeight="20"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Вход -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                        <TextBlock Text="Already have an account?" Foreground="#a6adc8" FontSize="13"/>
                        <Button Content="Sign In" Background="Transparent" Foreground="#89b4fa" 
                                Command="{Binding BackToLoginCommand}" 
                                FontWeight="SemiBold" FontSize="13" Padding="0" Height="20"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Panel>

        <!-- ГЛАВНОЕ ОКНО (DASHBOARD) -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Dashboard}">
            <Grid RowDefinitions="Auto,*,Auto" Background="#1e1e2e">
                
                <Border Grid.Row="0" Background="#181825" Height="60" Padding="20,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0">
                            <TextBlock Text="CTF :: DASHBOARD" VerticalAlignment="Center" Foreground="#89b4fa" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="20" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Username, StringFormat='User: {0}'}" Foreground="#a6adc8"/>
                            <TextBlock Text="{Binding CurrentScore, StringFormat='Score: {0}'}" Foreground="#fab387" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" Padding="20">
                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#313244" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#45475a" BorderThickness="1">
                                    <StackPanel Spacing="10">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="#89b4fa"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Points, StringFormat='Points: {0}'}" Foreground="#bac2de" FontSize="12" VerticalAlignment="Center"/>
                                        </Grid>
                                        
                                        <TextBlock Text="{Binding Description}" Foreground="#a6adc8" TextWrapping="Wrap"/>
                                        
                                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                            <TextBox Watermark="{Binding PlaceholderText}" Text="{Binding UserInput}" Width="300" Height="35" IsEnabled="{Binding !IsSolved}"/>
                                            <Button Command="{Binding SubmitCommand}" Content="{Binding ButtonText}" Background="{Binding ButtonColor}" Foreground="#1e1e2e" FontWeight="Bold" Height="35" Width="120"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="20">
                    <Button Content="PROFILE" Background="#89b4fa" Foreground="#1e1e2e" 
                            Width="100" FontWeight="Bold" CornerRadius="5"
                            Command="{Binding SwitchToProfileCommand}"/>
                    <Button Content="LOGOUT" Background="#f38ba8" Foreground="#1e1e2e" 
                            Width="100" FontWeight="Bold" CornerRadius="5"
                            Command="{Binding SwitchToLoginCommand}"/>
                </StackPanel>
            </Grid>
        </Panel>

        <!-- ЭКРАН ПРОФИЛЯ -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Profile}">
            <v:ProfileView DataContext="{Binding ProfileViewModel}" />
        </Panel>
    </Panel>

</Window>
