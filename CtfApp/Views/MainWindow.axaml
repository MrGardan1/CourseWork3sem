<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CtfApp.ViewModels"
        xmlns:v="using:CtfApp.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="CtfApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CTF Platform"
        Width="900" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e2e">

    <Panel>
        <!-- Ð­ÐšÐ ÐÐ Ð’Ð¥ÐžÐ”Ð -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Login}">
            <Grid Background="#1e1e2e">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25" Width="450">
                    
                    <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
                    <TextBlock Text="Welcome" Foreground="#a6e3a1" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                    
                    <!-- Ð¤Ð¾Ñ€Ð¼Ð° Ð²Ñ…Ð¾Ð´Ð° -->
                    <Border Background="#313244" CornerRadius="10" Padding="35,30" BorderBrush="#45475a" BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Login" Foreground="#cdd6f4" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <TextBox Watermark="Username" Text="{Binding Username}" 
                                     Height="48" CornerRadius="8" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <TextBox Watermark="Password" Text="{Binding Password}" 
                                     Height="48" CornerRadius="8" PasswordChar="â—" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <Button Command="{Binding LoginCommand}" Content="SIGN IN" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="48" 
                                    Background="#a6e3a1" Foreground="#1e1e2e" FontWeight="Bold" CornerRadius="8" FontSize="14" Margin="0,10,0,0"/>
                            
                            <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" 
                                       HorizontalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap" TextAlignment="Center" MinHeight="20"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Ð ÐµÐ³Ð¸ÑÑ‚Ñ€Ð°Ñ†Ð¸Ñ -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                        <TextBlock Text="Don't have an account?" Foreground="#a6adc8" FontSize="13"/>
                        <Button Content="Sign Up" Background="Transparent" Foreground="#89b4fa" 
                                Command="{Binding SwitchToRegisterCommand}" 
                                FontWeight="SemiBold" FontSize="13" Padding="0" Height="20"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Panel>

        <!-- Ð­ÐšÐ ÐÐ Ð Ð•Ð“Ð˜Ð¡Ð¢Ð ÐÐ¦Ð˜Ð˜ -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Register}">
            <Grid Background="#1e1e2e">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="25" Width="450" DataContext="{Binding RegisterViewModel}">
                                        
                    <!-- Ð¤Ð¾Ñ€Ð¼Ð° Ñ€ÐµÐ³Ð¸ÑÑ‚Ñ€Ð°Ñ†Ð¸Ð¸ -->
                    <Border Background="#313244" CornerRadius="10" Padding="35,30" BorderBrush="#45475a" BorderThickness="1">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Sign Up" Foreground="#cdd6f4" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <TextBox Watermark="Username" Text="{Binding Username}" 
                                     Height="48" CornerRadius="8" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <TextBox Watermark="Password" Text="{Binding Password}" 
                                     Height="48" CornerRadius="8" PasswordChar="â—" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <TextBox Watermark="Confirm Password" Text="{Binding PasswordConfirm}" 
                                     Height="48" CornerRadius="8" PasswordChar="â—" VerticalContentAlignment="Center"
                                     Background="#1e1e2e" Foreground="#cdd6f4" BorderBrush="#585b70"/>
                            
                            <Button Command="{Binding RegisterCommand}" Content="CREATE ACCOUNT" 
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="48" 
                                    Background="#fab387" Foreground="#1e1e2e" FontWeight="Bold" CornerRadius="8" FontSize="14" Margin="0,10,0,0"/>
                            
                            <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" 
                                       HorizontalAlignment="Center" FontWeight="SemiBold" TextWrapping="Wrap" TextAlignment="Center" MinHeight="20"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Ð’Ñ…Ð¾Ð´ -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                        <TextBlock Text="Already have an account?" Foreground="#a6adc8" FontSize="13"/>
                        <Button Content="Sign In" Background="Transparent" Foreground="#89b4fa" 
                                Command="{Binding BackToLoginCommand}" 
                                FontWeight="SemiBold" FontSize="13" Padding="0" Height="20"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Panel>

        <!-- Ð“Ð›ÐÐ’ÐÐžÐ• ÐžÐšÐÐž (DASHBOARD) -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Dashboard}">
            <Grid RowDefinitions="Auto,*" Background="#1e1e2e">
                
                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
                <Border Grid.Row="0" Background="#181825" Height="60" Padding="20,0" ZIndex="200">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Column="0">
                            <TextBlock Text="DASHBOARD" VerticalAlignment="Center" Foreground="#89b4fa" FontWeight="Bold" FontSize="18"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Spacing="20" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUsername, StringFormat='User: {0}'}" Foreground="#a6adc8"/>
                            <TextBlock Text="{Binding CurrentScore, StringFormat='Score: {0}'}" Foreground="#fab387" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" ClipToBounds="False">
                    <ItemsControl ItemsSource="{Binding Tasks}" Margin="20,20,20,200">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#313244" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#45475a" BorderThickness="1">                                    <StackPanel Spacing="10">
                                        <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                            <Border Grid.Column="0" Background="#45475a" CornerRadius="5" Padding="8,4" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding Category}" Foreground="#89b4fa" FontSize="11" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Grid.Column="1" Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="#cdd6f4" VerticalAlignment="Center"/>
                                            <Border Grid.Column="2" Background="{Binding DifficultyColor}" CornerRadius="5" Padding="8,4" Margin="0,0,10,0">
                                                <TextBlock Text="{Binding Difficulty}" Foreground="#1e1e2e" FontSize="11" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Grid.Column="3" Text="{Binding Points, StringFormat='{}{0} pts'}" Foreground="#fab387" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                        </Grid>
                                        
                                        <!-- ÐžÐ¿Ð¸ÑÐ°Ð½Ð¸Ðµ -->
                                        <TextBlock Text="{Binding Description}" Foreground="#a6adc8" TextWrapping="Wrap"/>
                                        
                                        <!-- Ð’Ð²Ð¾Ð´ Ð¸ ÐºÐ½Ð¾Ð¿ÐºÐ¸ -->
                                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                            <TextBox Watermark="{Binding PlaceholderText}" Text="{Binding UserInput}" Width="300" Height="35" IsEnabled="{Binding !IsSolved}"/>
                                            <Button Command="{Binding SubmitCommand}" Content="{Binding ButtonText}" Background="{Binding ButtonColor}" Foreground="#1e1e2e" FontWeight="Bold" Height="35" Width="120" CornerRadius="5"/>
                                            
                                            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð¿Ð¾Ð´ÑÐºÐ°Ð·ÐºÐ¸ (Ð¿Ð¾ÑÐ»Ðµ 3 Ð¿Ð¾Ð¿Ñ‹Ñ‚Ð¾Ðº) -->
                                            <Button Command="{Binding ShowHintCommand}" Content="ðŸ’¡ HINT?" 
                                                    Background="#f9e2af" Foreground="#1e1e2e" FontWeight="Bold" 
                                                    Height="35" Width="100" CornerRadius="5"
                                                    IsVisible="{Binding ShowHintButton}"/>
                                        </StackPanel>
                                        
                                        <!-- Ð¡Ñ‚Ð°Ñ‚ÑƒÑ -->
                                        <TextBlock Text="{Binding StatusMessage}" Foreground="{Binding StatusColor}" 
                                                   FontSize="13" FontWeight="Bold" IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                        
                                        <!-- ÐŸÐ¾Ð´ÑÐºÐ°Ð·ÐºÐ° (Ð¿Ð¾ÑÐ»Ðµ ÐºÐ»Ð¸ÐºÐ° Ð½Ð° HINT) -->
                                        <Border Background="#313244" BorderBrush="#f9e2af" BorderThickness="2" 
                                                CornerRadius="8" Padding="12" Margin="0,10,0,0"
                                                IsVisible="{Binding HintRevealed}">
                                            <StackPanel Spacing="5">
                                                <TextBlock Text="ðŸ’¡ Hint:" Foreground="#f9e2af" FontSize="14" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Hint}" Foreground="#cdd6f4" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- ÐžÐ±ÑŠÑÑÐ½ÐµÐ½Ð¸Ðµ (Ð¿Ð¾ÑÐ»Ðµ Ð¿Ñ€Ð°Ð²Ð¸Ð»ÑŒÐ½Ð¾Ð³Ð¾ Ð¾Ñ‚Ð²ÐµÑ‚Ð°) -->
                                        <Border Background="#313244" BorderBrush="#a6e3a1" BorderThickness="2" 
                                                CornerRadius="8" Padding="12" Margin="0,10,0,0"
                                                IsVisible="{Binding ShowSolution}">
                                            <StackPanel Spacing="5">
                                                <TextBlock Text="âœ… Solution:" Foreground="#a6e3a1" FontSize="14" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Solution}" Foreground="#cdd6f4" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- ÐÐ¸Ð¶Ð½ÑÑ Ð¿Ð°Ð½ÐµÐ»ÑŒ -->
                <Border Grid.Row="1" 
                        VerticalAlignment="Bottom"
                        Background="#E61e1e2e"
                        Padding="20"
                        ZIndex="100">
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <Button Content="LEADERBOARD" Background="#f9e2af" Foreground="#1e1e2e" 
                                Width="140" FontWeight="Bold" CornerRadius="5"
                                Command="{Binding SwitchToLeaderboardCommand}"/>
                        <Button Content="PROFILE" Background="#89b4fa" Foreground="#1e1e2e" 
                                Width="120" FontWeight="Bold" CornerRadius="5"
                                Command="{Binding SwitchToProfileCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Panel>

        <!-- Ð­ÐšÐ ÐÐ ÐŸÐ ÐžÐ¤Ð˜Ð›Ð¯ -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Profile}">
            <v:ProfileView DataContext="{Binding ProfileViewModel}" />
        </Panel>

        <!-- Ð­ÐšÐ ÐÐ Ð›Ð˜Ð”Ð•Ð Ð‘ÐžÐ Ð”Ð -->
        <Panel IsVisible="{Binding CurrentScreen, Converter={x:Static ObjectConverters.Equal}, ConverterParameter=Leaderboard}">
            <v:LeaderboardView DataContext="{Binding LeaderboardViewModel}" />
        </Panel>
        
    </Panel>

</Window>
